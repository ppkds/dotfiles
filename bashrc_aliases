# ls aliases
    alias ll='ls -F -lh'
    alias lla='ls -alFhv'

# exa aliases
    alias exa='exa -lh --group-directories-first'


# File and Directory aliases
    alias mv='mv -i'
    alias cp='cp -iv'
    alias rm='rm -v'
    alias mkdir='mkdir -pv'

# Convinience aliasies
    alias apt='sudo apt'
    alias bashrc='source ~/.bashrc'
    alias cat='bat'
    alias cls='clear'
    alias df='df -hT'
    alias free='free -ht'
    alias links='links2'
    alias neofetch='clear && echo && neofetch'
    alias nth='name-that-hash'
    alias pwgen='pwgen -y 10'
    alias python='clear && python3'
    alias resources='neofetch && echo && echo - Memory - && free && echo && echo - Disk - && echo && df | grep -v /dev/loop | grep -v tmpfs'
    alias top='htop'
    alias weather='echo && curl wttr.in/{,London,Chicago,Mumbai}?format=3 && echo'
    alias weechat='weechat-curses'
    alias wget='wget -c'
    alias edit-git-files='vim -p \
            $HOME/Dev/Git/dotfiles/bashrc \
            $HOME/Dev/Git/dotfiles/bashrc_aliases \
            $HOME/Dev/Git/dotfiles/vimrc'
