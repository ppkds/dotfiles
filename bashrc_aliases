# Unused / Obsoleted aliases
    # alias apg='apg -a 0 -n 10 -m 10 -M SNC -s -t'

# ls aliases
    alias ls='ls  --color=auto -ChFv --group-directories-first'
    alias ll='ls -lhFv --group-directories-first'
    alias lla='ls -alhFv --group-directories-first'

# exa aliases
    alias exa='exa -lhFv --group-directories-first'


# File and Directory aliases
    alias cp='cp -iv'
    alias mkdir='mkdir -pv'
    alias mv='mv -iv'
    alias rm='rm -Iv'

# Convinience aliasies
    alias apt='sudo apt'
    alias bashrc='source ~/.bashrc'
    alias cat='batcat'
    alias cls='clear'
    alias df='df -hT | grep -v ^none | ( read header ; echo "$header" ; sort -k 1)'
    alias free='free -ht'
    alias git-dotfiles='git -C ~/Dev/Git/dotfiles'
    alias links='links2'
    alias lsb_release='lsb_release -cdir'
    alias neofetch='echo && neofetch'
    alias nth='name-that-hash'
    alias os-release='cat -l sh /etc/os-release'
    alias pwgen='pwgen -y 10'
    alias python='clear && python3'
    alias resources='neofetch && echo && echo - Memory - && free && echo && echo - Disk - && echo && df | grep -v /dev/loop -v | grep -v tmpfs | grep -v snapfuse'
    alias snap='sudo snap'
    alias top='htop'
    alias weather='echo && curl wttr.in/{Tokyo,Bejing,Mumbai,Moscow,London,"New_York",Chicago,Denver,Sacramento,}?format="%l:+%c+%t+|+Local+Time:+%T|+Sunrise/Sunset:+%S+%s\n" && echo'
    alias weechat='weechat-curses'
    alias wget='wget -c'
    alias edit-gitfiles='vim -p \
            $HOME/Dev/Git/dotfiles/bashrc \
            $HOME/Dev/Git/dotfiles/bashrc_aliases \
            $HOME/Dev/Git/dotfiles/vimrc'
